<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>로그인</title>
    <link rel="stylesheet" href="/css/login.css" />
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <div class="login-container">
      <div class="login-box">
        <div class="login-img">
          <img src="/image/login.svg" alt="Login illustration" />
        </div>

        <div class="login-form">
          <div class="login-inputs">
            <div class="input-group">
              <input
                type="text"
                id="loginEmail"
                class="input-field"
                placeholder="이메일을 입력하세요"
              />
            </div>

            <div class="input-group">
              <input
                type="password"
                id="loginPassword"
                class="input-field"
                placeholder="비밀번호를 입력하세요"
              />
            </div>

            <button type="button" class="login-btn" id="btn_login">
              로그인
            </button>

            <button type="button" class="kakao-btn" id="kakaoLogin">
              카카오 로그인
            </button>

            <div class="signup-link">
              <a href="/signup">회원가입</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://t1.kakaocdn.net/kakao_js_sdk/2.7.6/kakao.min.js"
      integrity="sha384-WAtVcQYcmTO/N+C1N+1m6Gp8qxh+3NlnP7X1U7qP6P5dQY/MsRBNTh+e1ahJrkEm"
      crossorigin="anonymous"
    ></script>

    <script>
      if (typeof Kakao !== "undefined" && !Kakao.isInitialized()) {
        Kakao.init("<%= kakaoJSkey %>");
      }
    </script>

    <script type="module" src="/js/login.js"></script>
  </body>
</html>

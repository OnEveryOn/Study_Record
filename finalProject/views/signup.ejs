<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>회원가입</title>
    <link rel="stylesheet" href="/css/signup.css" />
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <div id="container">
      <div id="signupContainer">
        <div style="margin-bottom: 25px">
          <span style="font-size: 25px; font-weight: bold">회원가입</span>
        </div>

        <div class="signup-inputs">
          <!-- name -->
          <div class="ipt_Container">
            <div class="ipt_fields">
              <label
                >이름<span class="required" 
                  >*</span
                ></label
              >
            </div>
            <div class="ipt_box">
              <input
                class="ipt_field"
                id="ipt_name"
                type="text"
                placeholder="이름을 입력하세요"
                minlength="2"
                maxlength="4"
              />
            </div>
          </div>

          <!-- id -->
          <div class="ipt_Container">
            <div class="ipt_fields">
              <label>이메일<span class="required">*</span></label>
            </div>
            <div class="ipt_box">
              <input
                class="ipt_field"
                id="ipt_email"
                type="email"
                placeholder="이메일을 입력하세요"
              />
            </div>
          </div>

          <!-- password -->
          <div class="ipt_Container">
            <div class="ipt_fields">
              <label>비밀번호<span class="required">*</span></label>
            </div>
            <div class="ipt_box">
              <input
                class="ipt_field"
                id="ipt_pw"
                type="password"
                placeholder="비밀번호를 입력하세요"
                minlength="4"
                maxlength="12"
              />
            </div>
          </div>

          <!-- password check -->
          <div class="ipt_Container">
            <div class="ipt_fields">
              <label>비밀번호 확인<span class="required">*</span></label>
            </div>
            <div class="ipt_box">
              <input
                class="ipt_field"
                id="ipt_pwChk"
                type="password"
                placeholder="비밀번호를 다시 입력하세요"
                minlength="4"
                maxlength="12"
              />
            </div>
          </div>

          <!-- 회원가입 버튼 -->
          <div id="btn_container">
            <button id="btn_signup" type="button">회원가입</button>
          </div>
          <div id="btn_login">
            <span>이미 계정이 있으신가요? <a href="/login">로그인</a></span>
          </div>
        </div>
      </div>
    </div>

    <script type="module" src="/js/signup.js"></script>
  </body>
</html>
